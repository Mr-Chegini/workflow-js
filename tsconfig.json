{
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "baseUrl": "./src",
    "declaration": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "strictFunctionTypes": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "jest"],
    "removeComments": false,
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "*": ["src/*"],
      "core/*": ["src/core/*"],
      "common/*": ["src/common/*"]
    }
  },
  "include": ["src/**/*"]
}
