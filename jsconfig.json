{
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "baseUrl": "./src",
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "jest"],
    "removeComments": false,
    "outDir": "./dist",
    "strict": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
